<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxws="http://cxf.apache.org/jaxws" xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd 
	http://cxf.apache.org/jaxws 
	http://cxf.apache.org/schemas/jaxws.xsd 
	http://cxf.apache.org/jaxrs 
	http://cxf.apache.org/schemas/jaxrs.xsd">
	<import resource="classpath:META-INF/cxf/cxf.xml" />
	<bean id="User" class="service.UserEndpoint" />
	<bean id="Advertisment" class="service.AdvertismentEndpoint" />
	<bean id="Application" class="service.ApplicationEndpoint" />
	<bean id="Article" class="service.ArticleEndpoint" />
	<bean id="Comment" class="service.CommentEndpoint" />
	<bean id="Connection" class="service.ConnectionEndpoint" />
	<bean id="ConnectionRequest" class="service.ConnectionRequest" />
	<bean id="Conversation" class="service.ConversationEndpoint" />
	<bean id="Skill" class="service.SkillEndpoint" />
	<bean id="Interest" class="service.InterestEndpoint" />
	<bean id="Message" class="service.MessageEndpoint" />
	<jaxrs:server id="base" address="/">	
		<jaxrs:serviceBeans>
			<ref bean="User"/>
			<ref bean="Advertisment"/>
			<ref bean="Application"/>
			<ref bean="Article"/>
			<ref bean="Comment"/>
			<ref bean="Connection"/>
			<ref bean="ConnectionRequest"/>
			<ref bean="Conversation"/>
			<ref bean="Skill"/>
			<ref bean="Users"/>
			<ref bean="Message"/>
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<!-- bean class="utilities.CustomJSONProvider"/-->
			<bean class="com.fasterxml.jackson.jaxrs.json.JacksonJsonProvider"/>
		</jaxrs:providers>
	</jaxrs:server>

	 
</beans>